<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/ic_wishlist"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_wish_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="My Wishlist"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_orders"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:paddingBottom="7dp"
            android:src="@drawable/ic_my_orders" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="My Orders"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_mycart"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_my_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="My Cart"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_chat"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_live_chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Live Chat"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_settings"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Settings"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>