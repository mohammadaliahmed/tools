<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:weightSum="30.5">


    <ImageView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@drawable/ic_cancel" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:layout_weight="1"
        android:src="@drawable/image215" />

    <TextView
        android:id="@+id/color"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="Color" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:layout_weight="1"
        android:src="@drawable/image343" />

    <TextView
        android:id="@+id/size"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="Size" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/image344" />

    <EditText
        android:id="@+id/sku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:background="@drawable/edit_text_black"
        android:hint="SKU"
        android:inputType="textCapCharacters"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"

        android:src="@drawable/image339" />

    <EditText
        android:id="@+id/quantityAvailable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/edit_text_black"
        android:hint="QTY"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/image350" />

    <EditText
        android:id="@+id/wholesalePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/edit_text_black"
        android:hint="wholesale price"

        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"

        android:src="@drawable/image349" />

    <EditText
        android:id="@+id/oldWholeSalePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/edit_text_black"

        android:hint="old w.s price"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"

        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/image337" />

    <EditText
        android:id="@+id/minOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/edit_text_black"

        android:hint="min qty"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"

        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/image341" />

    <EditText
        android:id="@+id/retailPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="@drawable/edit_text_black"
        android:hint="retial price"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:layout_weight="1"
        android:src="@drawable/image340" />

    <EditText
        android:id="@+id/oldRetailPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"

        android:background="@drawable/edit_text_black"
        android:hint="old retail"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="11sp" />

    <Button
        android:id="@+id/setValues"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/btn_bg_green"
        android:inputType="text"
        android:text="Set values"
        android:textColor="#fff"

        android:textSize="11sp" />


</LinearLayout>


