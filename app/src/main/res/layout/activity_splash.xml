<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brick"
    tools:context="com.appsinventiv.toolsbazzar.Activities.Splash">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/logo"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/cosmic_fonts"
        android:gravity="center"
        android:text="Product by Fort City"
        android:textColor="#fff"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/cosmic_fonts"
        android:textSize="13sp"
        android:gravity="center"
        android:text="Â© 2018 FortCity.com. All rights reserved"
        android:textColor="#fff"
        android:textStyle="bold" />
</RelativeLayout>
