<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/fort_city" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Your Attention Please !"
            android:textColor="@color/colorYellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Maintaining the safety of our FortCity community is a responsibility we take very seriously. For this reason, and to comply with local &amp; International legal restrictions, some categories of products listed below are restricted for International  Shipping , or completely banned from being shipped, also All packages shipped via import / export are subjected to customs inspection and clearance.\n\nTherfore To avoid shipment confiscation,
we recommend you to avoid shopping The following items which is not eligible for shipping as per GDA (Global Distribution Alliance) Policy."
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Prohibited / Unacceptable Item List for International shipping
"
            android:textColor="@color/colorYellow" />

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitStart"
            android:layout_height="5000dp"
            android:src="@drawable/ic_client_prohibted" />
    </LinearLayout>
</ScrollView>